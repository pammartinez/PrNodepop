<% include _header %>

<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a href="/" class="navbar-brand">Nodeapi</a>
      <% getLocales().forEach( locale => { %>
        <a href="/change-locale/<%= locale %>"><%= locale %></a>&nbsp;
        <!-- /change-locale va a poner una cookie de idioma y recargar la página -->
      <% }) %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= __('Listing of announcements') %></h1>
      <p class="lead"><%= __('List')%> : <%= anuncios.length %> <%= __('of')%> <%= total %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= __('Name')%></th>
            <th><%= __('Sale')%></th>
            <th style="text-align: right"><%= __('Price')%></th>
            <th><%= __('Photo')%></th>
            <th><%= __('Tags')%></th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
          <% anuncios.forEach(anuncio => { %>
          <tr>
            <td><%= anuncio.nombre %></td>
            <td><%= anuncio.venta ? __('Yes') : __('Not') %></td>
            <td style="text-align: right"><%= anuncio.precio %>€</td>
            <td><img src="<%= anuncio.foto %>"></td>
            <td><%= anuncio.tags %></td>
            <td><%= anuncio._id %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>

      <p><%= __('Examples')%>:</p>

      <ul>
        <li><a href="?"><%= __('All')%> (max. 1000)</a></li>
        <li><a href="?start=0&limit=2"><%= __('Paginated')%></a></li>
        <li><a href="?sort=precio"><%= __('Sorted by ascending price')%></a></li>
        <li><a href="?sort=-precio"><%= __('Sorted by descending price')%></a></li>
        <li><a href="?tag=mobile"><%= __('With tag mobile')%></a></li>
      </ul>

    </div>
  </div>

  <a href="/"><%= __('Back to home')%></a>

</div>
<% include _footer %>
